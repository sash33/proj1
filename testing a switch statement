#include <stdio.h>
#include <unistd.h>

int main(){
    //test for git commit working
float key;
char message[] = {'A', /*'b', 'c', 'd', 'e', 'f', 'g', 'h', 'u', 'w', 'x', 'y', 'Z'*/};
char encripted[26];
int direction;
int size = sizeof(message)/sizeof(char);
printf("enter the direction: 1 is forward, 2 is backwards\n");
direction = scanf("%d ", &direction);

switch(direction){
    case 1:
    //enter positive key
    
        break;
        
    case 2:
    printf("Enter the negative key: \n");
    key = scanf("%f ", &key);
    printf("the key is: %f\n", key);
    
        for(int i=0; i<size; i++){

            //shifts within Alphabet
            if(message[i] + key <= 'A'){
              encripted[i] = message[i] + key +26;
               printf("%c ", encripted[i]);
            }
        break;
}

}
 printf("%c ", encripted[0]);
}
