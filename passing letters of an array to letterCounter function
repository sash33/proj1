int letterCounter(char message[]){
    int size = 14;
    char test = 'E';
    int f=0;
        
        for(int i=0; i<=size; i++){
            if(message[i] == test){
            f++;
            }
        }
    //printf("%c is used: %d times\n",test, f);
    return f;
}
return 0;
}
